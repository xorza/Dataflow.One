<UserControl x:Class="csso.WpfNode.NodeEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:csso.WpfNode"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="NodeEditUserControl">
    <UserControl.Template>
        <ControlTemplate TargetType="local:NodeEdit">
            <ContentPresenter />
        </ControlTemplate>
    </UserControl.Template>
    <Grid>
        <Grid Margin="{Binding Path=Padding, ElementName=NodeEditUserControl}">
            <Label Content="{Binding Path=NodeView.Name, ElementName=NodeEditUserControl}" />
        </Grid>
    </Grid>
</UserControl>