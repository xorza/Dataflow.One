<UserControl x:Class="csso.NodeRunner.Overview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:WpfNode="clr-namespace:csso.WpfNode;assembly=csso.WpfNode"

             mc:Ignorable="d"
             x:Name="OverviewUserControl"
             Background="{StaticResource InactiveContentBackgroundBrush}"
             Foreground="{StaticResource InactiveForegroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition MinWidth="300" Width="300" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <WpfNode:Graph x:Name="Graph"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       NodeStyle="{StaticResource NodeDefaultStyle}"
                       GraphView="{Binding Path=GraphView, ElementName=OverviewUserControl}" />

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Slider
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="2">

            </Slider>

            <Button Grid.Column="1" Content="Run"
                    Width="70" Height="35"
                   Click="Run_ButtonBase_OnClick" ></Button>
        </Grid>

        <GridSplitter
            Grid.Column="1"
            Grid.Row="0"
            Grid.RowSpan="2"
            Width="2"
            ResizeDirection="Columns"
            ResizeBehavior="PreviousAndNext"
            Background="{StaticResource ActiveContentBackgroundBrush}" />

        <Border BorderThickness="0 0 0 0 "
                Grid.Row="0"
                Grid.Column="2"
                Grid.RowSpan="2"
                MinWidth="200"
                Background="{StaticResource PanelBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <WpfNode:NodeEdit
                    x:Name="NodeEdit"
                    Padding="{StaticResource DefaultPadding}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    NodeView="{Binding Path=GraphView.SelectedNode, ElementName=OverviewUserControl}" />

                <GridSplitter Grid.Row="1" Height="2"
                              ResizeDirection="Rows"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              ResizeBehavior="PreviousAndNext"
                              Background="{StaticResource ActiveContentBackgroundBrush}" />
                <!-- <Rectangle Grid.Row="1" Fill="Beige" Height="1" StrokeThickness="0" Stroke="{x:Null}" /> -->

                <WpfNode:FunctionFactoryBrowser Grid.Row="2" x:Name="FunctionFactoryBrowser"
                                                ListViewItemStyle="{StaticResource ListViewItemDefault}"
                                                FunctionFactory="{Binding ElementName=OverviewUserControl, Path=GraphView.FunctionFactory}"
                                                NodeStyle="{StaticResource NodeDefaultStyle}"
                                                FunctionChosen="FunctionFactoryBrowser_OnFunctionChosen" />
            </Grid>
        </Border>

    </Grid>
</UserControl>